@import 'nib'

html
  position absolute
  width 100%
  min-height 100%
  margin 0
  padding 0

body
  overflow-y scroll
  margin 0 0 60px 0
  padding 0
  font-family 'proxima-nova', 'Proxima Nova', Helvetica Neue, Helvetica, sans-serif
  font-smoothing antialiased
  text-rendering optimizeLegibility
  -webkit-font-smoothing antialiased

::selection
  background #C39BD3
  color #ffffff

::-moz-selection
  background #C39BD3
  color #ffffff

.main-heading
  text-align center
  color #454E55
  padding-bottom 30px
  padding-top 20px

.subheading
  text-align center
  color #454E55

.footer
  position absolute
  bottom 0
  width 100%
  padding 8px 0
  background-color #2B2D34
  .message
    padding 6px 12px
    color #A3A5AC
    display none
  .input-group
    margin 5px 0 0 0
    .subscribe
      border-radius 4px
    .form-control
      border-radius 0
      border none
      -webkit-box-shadow none
      box-shadow none
      -webkit-transition none
      transition none
      background-color transparent
      color #A3A5AC

.navbar-default
  background-color #fff
  border-color #eee

li
  .active
    a
      background-color #fff !important
      color #8e44ad !important

li a:hover, a.navbar-brand:hover, .navbar-text a:hover
  color #8e44ad !important

.navbar-text
  padding-top 2px !important
  a
    color #777 !important
    text-decoration none

a
  .navbar-brand
    color #454E55 !important



/*
textarea
  box-sizing: border-box
  width 100%
  height 18px
  overflow hidden
  padding 0
  border 0
  appearance none
  padding-end 0px
  padding-start 0px
  outline none
  resize none
  margin 0
  color #393939
  background-color transparent
*/

.start-editing, .stop-editing, .add-object
  &:hover
    cursor pointer
    text-decoration underline

.control-icons
  .fa
    cursor pointer

.object
  &.is-edited
    > .form-area
      margin-left: -15px;
      margin-right: -15px;
      background-color #F5F5F5
      border-radius 5px
      > .row
        margin-left: 0;
        margin-right: 0;
      form
        margin 15px 0
      .control-label
        text-align left
      .form-control
        font-size 18px

.user
  .avatar
    display inline-block
    vertical-align middle
    width 30px
    height 30px
    overflow hidden
    border-radius 5px
    margin-right 4px
    img
      max-width 30px
  .name
    vertical-align middle
  .party
    vertical-align middle

.align-middle
  vertical-align middle

.add-objects-wrapper
  margin 10px 0
  .results
    margin-bottom 15px
    .user
      &:hover
        cursor pointer
        .name
          text-decoration underline

.object.placeholder
  background-color #F0F0F0

.object-list
  ul
    li
      padding 0
    a
      display block
      padding 15px 20px
      &:hover
        text-decoration none
        .sender
          text-decoration underline
    a, a:link, a:visited, a:active
      color #636e7b

.leader
  margin-top 0
  margin-bottom 15px
